-- [[ ⚡ Premium Black/Red Fancy Roblox UI made for you ⚡ ]] --

local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

--// MAIN UI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "CustomUI"
ScreenGui.Parent = game.CoreGui
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
MainFrame.Size = UDim2.new(0, 500, 0, 300)
MainFrame.Position = UDim2.new(0.5, -250, 0.5, -150)
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.Visible = false
MainFrame.BackgroundTransparency = 0
MainFrame.BorderSizePixel = 0
MainFrame.ClipsDescendants = true

-- Corner Rounding
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = MainFrame

local UIStroke = Instance.new("UIStroke")
UIStroke.Thickness = 1
UIStroke.Color = Color3.fromRGB(255, 0, 0)
UIStroke.Parent = MainFrame

--// Title Bar
local TopBar = Instance.new("Frame")
TopBar.Name = "TopBar"
TopBar.Parent = MainFrame
TopBar.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
TopBar.Size = UDim2.new(1, 0, 0, 30)
TopBar.BorderSizePixel = 0

local TopLabel = Instance.new("TextLabel")
TopLabel.Parent = TopBar
TopLabel.Size = UDim2.new(1, 0, 1, 0)
TopLabel.BackgroundTransparency = 1
TopLabel.Text = "⚡ Fancy Custom UI"
TopLabel.Font = Enum.Font.GothamBold
TopLabel.TextSize = 18
TopLabel.TextColor3 = Color3.fromRGB(255, 0, 0)

--// X Button
local CloseButton = Instance.new("TextButton")
CloseButton.Parent = TopBar
CloseButton.Text = "X"
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -30, 0, 0)
CloseButton.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
CloseButton.TextColor3 = Color3.fromRGB(255, 0, 0)
CloseButton.Font = Enum.Font.GothamBold
CloseButton.TextSize = 18
CloseButton.BorderSizePixel = 0

local CloseUICorner = Instance.new("UICorner")
CloseUICorner.CornerRadius = UDim.new(0, 8)
CloseUICorner.Parent = CloseButton

--// Settings Button (⚙️)
local SettingsButton = Instance.new("TextButton")
SettingsButton.Parent = TopBar
SettingsButton.Text = "⚙️"
SettingsButton.Size = UDim2.new(0, 30, 0, 30)
SettingsButton.Position = UDim2.new(1, -60, 0, 0)
SettingsButton.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
SettingsButton.TextColor3 = Color3.fromRGB(255, 0, 0)
SettingsButton.Font = Enum.Font.GothamBold
SettingsButton.TextSize = 18
SettingsButton.BorderSizePixel = 0

local SettingsUICorner = Instance.new("UICorner")
SettingsUICorner.CornerRadius = UDim.new(0, 8)
SettingsUICorner.Parent = SettingsButton

--// Tabs
local TabFrame = Instance.new("Frame")
TabFrame.Parent = MainFrame
TabFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
TabFrame.Position = UDim2.new(0, 0, 0, 30)
TabFrame.Size = UDim2.new(0, 150, 1, -30)
TabFrame.BorderSizePixel = 0

local UIPadding = Instance.new("UIPadding", TabFrame)
UIPadding.PaddingTop = UDim.new(0, 10)

local TabList = Instance.new("UIListLayout", TabFrame)
TabList.SortOrder = Enum.SortOrder.LayoutOrder
TabList.Padding = UDim.new(0, 5)

--// Tab Button Template
local function CreateTabButton(name)
    local Button = Instance.new("TextButton")
    Button.Parent = TabFrame
    Button.Size = UDim2.new(1, -20, 0, 40)
    Button.Position = UDim2.new(0, 10, 0, 0)
    Button.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.Font = Enum.Font.Gotham
    Button.TextSize = 16
    Button.Text = name
    Button.BorderSizePixel = 0
    
    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0, 6)
    UICorner.Parent = Button

    -- Hover Effect
    Button.MouseEnter:Connect(function()
        TweenService:Create(Button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(255, 0, 0)}):Play()
    end)
    Button.MouseLeave:Connect(function()
        TweenService:Create(Button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(30, 30, 30)}):Play()
    end)

    return Button
end

local MainTab = CreateTabButton("Main")
local SettingsTab = CreateTabButton("Settings")

--// Pages
local PagesFrame = Instance.new("Frame")
PagesFrame.Parent = MainFrame
PagesFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
PagesFrame.Position = UDim2.new(0, 150, 0, 30)
PagesFrame.Size = UDim2.new(1, -150, 1, -30)
PagesFrame.BorderSizePixel = 0

local UIPageLayout = Instance.new("UIPageLayout", PagesFrame)
UIPageLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIPageLayout.EasingDirection = Enum.EasingDirection.InOut
UIPageLayout.EasingStyle = Enum.EasingStyle.Quad

local MainPage = Instance.new("Frame")
MainPage.Parent = PagesFrame
MainPage.Size = UDim2.new(1, 0, 1, 0)
MainPage.BackgroundTransparency = 1

local SettingsPage = Instance.new("Frame")
SettingsPage.Parent = PagesFrame
SettingsPage.Size = UDim2.new(1, 0, 1, 0)
SettingsPage.BackgroundTransparency = 1

--// Switching Tabs
MainTab.MouseButton1Click:Connect(function()
    UIPageLayout:JumpTo(MainPage)
end)
SettingsTab.MouseButton1Click:Connect(function()
    UIPageLayout:JumpTo(SettingsPage)
end)

--// Close Button
CloseButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
end)

--// Default Toggle Keybind
local ToggleKey = Enum.KeyCode.RightControl

local SettingsText = Instance.new("TextButton")
SettingsText.Parent = SettingsPage
SettingsText.Size = UDim2.new(0, 200, 0, 50)
SettingsText.Position = UDim2.new(0.5, -100, 0.3, 0)
SettingsText.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
SettingsText.Text = "Change Toggle Key"
SettingsText.TextColor3 = Color3.fromRGB(255, 255, 255)
SettingsText.Font = Enum.Font.Gotham
SettingsText.TextSize = 16
SettingsText.BorderSizePixel = 0

local UICorner2 = Instance.new("UICorner")
UICorner2.CornerRadius = UDim.new(0, 6)
UICorner2.Parent = SettingsText

SettingsText.MouseButton1Click:Connect(function()
    SettingsText.Text = "Press a Key..."
    local conn
    conn = UserInputService.InputBegan:Connect(function(input, gpe)
        if not gpe then
            ToggleKey = input.KeyCode
            SettingsText.Text = "Keybind set to: "..tostring(ToggleKey.Name)
            conn:Disconnect()
        end
    end)
end)

--// Settings ⚙️ button switch
SettingsButton.MouseButton1Click:Connect(function()
    UIPageLayout:JumpTo(SettingsPage)
end)

--// Toggle UI
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == ToggleKey then
        MainFrame.Visible = not MainFrame.Visible
    end
end)

--// Animate MainFrame In
task.wait(0.5)
MainFrame.Visible = true
MainFrame.Position = UDim2.new(0.5, -250, 1.2, 0)
TweenService:Create(MainFrame, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Position = UDim2.new(0.5, -250, 0.5, -150)}):Play()
